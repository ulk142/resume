<div>
    {{#with main}}
    <main>
        <section>
            {{> title data="Work history" big=true}}
            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div>{{position}}</div>
                        <br>
                        <div>
                            {{duration.from}}-
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (до цього часу)
                            {{/if}}
                        </div>
                        <br>
                        <div>
                            {{#if company.url}}
                                {{> link text=company.name href=company.url blank=true noLine=true}}
                            {{else}}
                                <b>{{company.name}}</b>
                            {{/if}}
                        </div>
                        <br><br>
                        <div><strong>Projects ({{projectAmount}})</strong></div>
                        <br>

                        <ul>
                            {{#each projects}}
                            <li>
                                <div>{{> link text=name href=url blank=true noLine=true}}</div>
                                <br>
                                <div><p>{{about}}</p></div>
                                <br>
                                <div><em>Project stacks ({{stackAmount}})</em></div>
                                <br>
                                {{#each stacks}}
                                <li><div>{{name}}</div></li>
                                <br>
                                {{/each}}
                                <br>
                                <div><em>Project awards ({{awardAmount}})</em></div>
                                <br>
                                {{#each awards}}
                                <li><div>{{name}}</div></li>
                                <br>
                                {{/each}}
                    </li>
                    {{/each}}
                </ul>
                </li>
                <br>
                {{/each}}
                </ul>
            </div>
        </section>
    </main>
    {{/with}}
</div>