<div class='col-6'>
    <div class='card'>
        <img class="card-img-top" src={{img}}>
        <div class='card-body'>
            <h5 class="card-title">{{title}}</h2>
            {{#if isHot}}<span class='badge rounded-pill text-bg-warning'>HOT!</span>{{/if}}
            {{#if isNew}}<span class='badge rounded-pill text-bg-primary'>New</span>{{/if}}
            <div class="mt-2">
                {{#if isFast}}<span class='badge text-bg-success text-white'>Швидка доставка</span>{{/if}}
            </div>
            <div class="mt-2">
                {{#if isFree}}<span class='badge text-bg-secondary text-white'>Безкоштовна доставка</span>{{/if}}
            </div>

            <h5 class="mt-2">{{name}}</h5>
            <p>{{review.amount}} {{review.text}}</p>
            <h5>{{price}}</h5>
            <p class="mb-2">{{delivery}}</p>

            <div>
                {{#each buttons}}
                    <div class="mt-2">
                        {{#if isPrimary}}<a type="button" class="btn btn-primary" href={{link}}>{{text}}</a>{{/if}}
                    </div>
                    <div class="mt-2">
                        {{#if isSecondary}}<a type="button" class="btn btn-secondary" href={{link}}>{{text}}</a>{{/if}}
                    </div>
                {{/each}}
            </div>

            <div class="mt-3">
                {{#each characteristics}}
                    <li>{{title}}: {{value}}</li>
                {{/each}}
            </div>
        </div>
    </div>
</div>