<footer>
    <div class='nav'>
        {{#each footer}}
            <div class="nav-item col-2">
                {{#each this}}
                    {{#if @last}}
                        <a class='nav-link disabled' href={{link}}>{{text}}</a>
                    {{else}}
                        <a class='nav-link' href={{link}}>{{text}}</a>
                    {{/if}}
                {{/each}}
            </div>
        {{/each}}
    </div>
</footer>